Import("build_env")

source_list = ["datavalue.cpp","array.cpp",
               "arrayshape.cpp","scalar.cpp","exceptions.cpp"]
               
obj = build_env.SharedObject(source_list)
obj.append(SConscript("io/SConscript"))

libpniutils=build_env.SharedLibrary("pniutils",obj)
build_env.Alias("all",[libpniutils])
build_env.Alias("library",[libpniutils])

libpniutils_inst = build_env.Install("install/lib/",[libpniutils])
incpniutils_inst = build_env.Install("install/include/",Glob("*.hpp"))
build_env.Alias("install",[libpniutils_inst,incpniutils_inst])

